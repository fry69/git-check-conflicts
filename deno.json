{
  "name": "@fry69/git-check-conflicts",
  "version": "0.0.1",
  "description": "A CLI tool to check for merge conflicts in git repositories.",
  "exports": {
    ".": "./src/main.ts"
  },
  "license": "MIT",
  "permissions": {
    "default": {
      "run": true,
      "read": true,
      "write": true,
      "env": true
    }
  },
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check && deno task test",
    "test": "deno test -P",
    "test:unit": "deno test -P tests/main_lib_test.ts",
    "test:integration": "deno test -P tests/integration_test.ts",
    "test:cli": "deno test -P tests/cli_test.ts",
    "compile": "deno compile -P --output git-check-conflicts src/main.ts",
    "install:local": "deno task compile && mv git-check-conflicts $HOME/.local/bin/",
    "release": "deno run -A tools/release.ts",
    "workflow:meta": "GITHUB_OUTPUT=meta.txt deno run -A tools/get-deno-meta.ts && cat meta.txt"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.23",
    "@std/expect": "jsr:@std/expect@1",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/semver": "jsr:@std/semver@^1.0.6"
  },
  "publish": {
    "include": [
      "deno.json",
      "src/",
      "README.md",
      "CHANGELOG.md",
      "LICENSE"
    ]
  }
}
